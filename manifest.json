{
  "manifest_version": 2,
  "name": "ng-inspector for AngularJS",
  "description": "Inspector pane for AngularJS apps",
  "version": "0.0.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "contextMenus"
  ],
  "icons": {},
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "inject/*",
    "processing.png",
    "icons/*"
  ]
}